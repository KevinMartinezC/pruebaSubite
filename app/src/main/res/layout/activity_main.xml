<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".actividades.MainActivity">

<!--    POSICIONAR ELEMENTOS DE MANERA VERTICAL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/uber_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UberClone es una aplicaciÃ³n similar a uber"
            android:textAlignment="center"
            android:layout_margin="40dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_margin="20dp"
            >

            <Button
                android:id="@+id/BtnConductor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="SOY CONDUCTOR"
                app:backgroundTint="@color/anaranjado"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/BtnCliente"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                app:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="SOY CLIENTE" />

        </LinearLayout>





    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>